{
  "manifest_version": 3,
  "name": "R6 Siege Marketplace Helper",
  "version": "1.1",
  "description": "Displays lowest sell and highest buy prices on R6 Marketplace item cards.",
  "permissions": [
    "storage",
    "debugger",
    "scripting"
  ],
  "host_permissions": [
    "https://www.ubisoft.com/*",
    "https://connect.cdn.ubisoft.com/*",
    "https://overlay.cdn.ubisoft.com/*",
    "https://*.ubisoft.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.ubisoft.com/en-us/game/rainbow-six/siege/marketplace*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}